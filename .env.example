# Database
DATABASE_URL="postgresql://username:password@localhost:5432/socialhub_pro"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Redis (for caching and job queue)
REDIS_URL="redis://localhost:6379"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"

# Social Platform APIs
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"

WEIBO_APP_KEY="your-weibo-app-key"
WEIBO_APP_SECRET="your-weibo-app-secret"

BILIBILI_ACCESS_KEY="your-bilibili-access-key"
BILIBILI_API_SECRET="your-bilibili-api-secret"

DOUYU_API_KEY="your-douyu-api-key"
DOUYU_API_SECRET="your-douyu-api-secret"

YOUTUBE_API_KEY="your-youtube-api-key"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1  # 10% sampling

# Cache Settings
CACHE_TTL=300  # 5 minutes default TTL
CACHE_MAX_SIZE=1000  # Maximum number of cached items

# Development
NODE_ENV="development"