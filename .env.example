# Database
DATABASE_URL="postgresql://username:password@localhost:5432/socialhub"
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret"

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,video/avi"

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info"

# External APIs
BILIBILI_API_KEY="your-bilibili-api-key"
WEIBO_API_KEY="your-weibo-api-key"
TWITTER_API_KEY="your-twitter-api-key"
YOUTUBE_API_KEY="your-youtube-api-key"
DOUYU_API_KEY="your-douyu-api-key"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Environment
NODE_ENV="development"